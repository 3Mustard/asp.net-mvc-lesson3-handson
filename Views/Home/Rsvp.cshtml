@model partyRsvp.Models.GuestResponse
@{
    ViewData["Title"] = "RSVP";
}

<div>
    <h1>Welcome to the RSVP page!</h1>
    
    <p>Please enter your information below</p>
</div>
<form asp-action="RsvpForm" method="post" class="align-middle">
    <div class="justify-content-center">
    <p>
        <label asp-for="FirstName">Your first name:</label>
        <input asp-for="FirstName" />
    </p>
    <p>
        <label asp-for="LastName">Your last name:</label>
        <input asp-for="LastName" />
    </p>
    <p>
        <label asp-for="Email" class="email-label">Your email:</label>
        <input asp-for="Email" />
    </p>
    <p>
        <label asp-for="Phone" class="phone-label">Your phone:</label>
        <input asp-for="Phone" /></p>
    <p>
        <label>Will you attend?</label>
        <select asp-for="WillAttend">
            <option value="">Choose an option</option>
            <option value="true">Yes, I'll be there</option>
            <option value="false">No, I can't come</option>
        </select>
    </p>
    <button class ="btn btn-primary" type="submit">Submit RSVP</button>
    </div>
</form>